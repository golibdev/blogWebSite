    <div class="row">
        {{#each blogs}}
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h3>{{title}}</h3>
                    </div>
                    <div class="card-body">
                        <img class="img-fluid w-100" style="height: 280px;" src="/uploads/{{image}}" alt="{{title}}">
                        <a href="/blogpost?post={{slugUrl}}" class="btn btn-primary mt-3">
                            Read more â†’
                        </a>
                    </div>
                    <div class="card-footer">
                        Added: {{createdAt}}
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

{{> footer}}